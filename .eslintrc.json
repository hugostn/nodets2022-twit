{
    "env": {
      "browser": true,
      "node": true,
      "es2022": true,
      "jest": true
    },
    "extends": [
        "airbnb-base"
    ],
    "settings": {
      "import/resolver": {
        "typescript": {}
      }
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "tsconfigRootDir": "./"
    },
    "plugins": [
        "@typescript-eslint",
        "import"
    ],
    "rules": {
      "import/extensions": [
        2,
        {
          "ts": "never",
          "js": "never"
        }
      ]
    }
}
